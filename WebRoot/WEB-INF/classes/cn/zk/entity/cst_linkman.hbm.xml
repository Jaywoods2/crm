<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
  <hibernate-mapping package="cn.zk.entity">
  	<class name="Cst_linkman" table="cst_linkman" dynamic-insert="true" dynamic-update="true">
  		<id name="lkm_id" type="integer">
  			<generator class="increment"></generator>
  		</id>
  		<property name="lkm_cust_id" type="integer"></property>
  		<property name="lkm_cust_no" type="string" length="50"></property>
  		<property name="lkm_cust_name" type="string" length="100"></property>
  		<property name="lkm_name" type="string" length="50"></property>
  		<property name="lkm_sex" type="string" length="5"></property>
  		<property name="lkm_postion" type="string" length="50"></property>
  		<property name="lkm_tel" type="string" length="50"></property>
  		<property name="lkm_mobile" type="string" length="50"></property>
  		<property name="lkm_memo" type="string" length="300"></property>
  	</class>
  </hibernate-mapping>

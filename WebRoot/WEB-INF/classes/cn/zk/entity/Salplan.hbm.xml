<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.zk.entity">
	<class name="Salplan" table="sal_plan">
		<id name="pla_id" type="integer" length="20">
		 <generator class="increment"></generator>
		</id>
		<property name="pla_chc_id" type="integer" length="20"></property>
		<property name="pla_date" type="java.util.Date" length="50"></property>
		<property name="pla_todo" type="string" length="50"></property>
	    <property name="pla_result" type="string" length="50"></property>
	    
	</class>
</hibernate-mapping>

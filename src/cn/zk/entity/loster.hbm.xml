<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    <hibernate-mapping package="cn.zk.entity">
    	<class name="Cst_lost" table="cst_lost">
    		<id name="lost_id" type="integer">
    			<generator class="increment"></generator>
    		</id>
    		<property name="lost_cust_id" type="integer"></property>
    		<property name="lost_cust_name" type="string" length="20"></property>
    		<property name="lost_mgr" type="string" length="20"></property>
    		<property name="lost_last_odrdate" type="string" length="20"></property>
    		<property name="lost_okdate" type="string" length="20"></property>
    		<property name="lost_step" type="string" length="200"></property>
    		<property name="lost_stepadd" type="string" length="200"></property>
    		<property name="lost_why" type="string" length="100"></property>
    		<property name="lost_statue" type="integer"></property>
    	</class>

    </hibernate-mapping>
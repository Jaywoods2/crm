<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    <hibernate-mapping package="cn.zk.entity">
    	<class name="Cst_activity" table="cst_activity">
    		<id name="atv_id" type="integer">
    			<generator class="increment"></generator>
    		</id>
    		<property name="atv_cust_id" type="integer"></property>
    		<property name="atv_cust_no" type="string" length="50"></property>
    		<property name="atv_cust_name" type="string" length="100"></property>
    		<property name="atv_date" type="string" length="30"></property>
    		<property name="atv_place" type="string" length="200"></property>
    		<property name="atv_title" type="string" length="500"></property>
    		<property name="atv_desc" type="string" length="1000"></property>
    	</class>
    </hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    <hibernate-mapping package="cn.zk.entity">
    	<class name="Product" table="product">
    		<id name="prod_id" type="integer">
    			<generator class="increment"></generator>
    		</id>
    		<property name="prod_name" type="string" length="200"></property>
    		<property name="prod_type" type="string" length="100"></property>
    		<property name="prod_batch" type="string" length="100"></property>
    		<property name="prod_unit" type="string" length="10"></property>
    		<property name="prod_price" type="float"></property>
    		<property name="prod_memo" type="string" length="200"></property>
    	</class>
    </hibernate-mapping>

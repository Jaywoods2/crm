<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	<hibernate-mapping package="cn.zk.entity">
		<class name="Cst_log" table="cst_log">
			<id name="log_id" type="integer">
  				<generator class="increment"></generator>
  			</id>
  			<property name="log_op" type="string" length="20"></property>
  			<property name="log_event" type="string" length="200"></property>
			<property name="log_date" type="java.util.Date"></property>
		</class>
	</hibernate-mapping>